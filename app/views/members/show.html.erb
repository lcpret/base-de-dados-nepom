<h2 class="text-center"><i class="fas fa-anchor"></i> Tripulante <%= @member.id %></h2>

<div class="card p-4 mb-3 mt-3">
  <div class="d-flex justify-content-between text-dark">
    <h5>Nome: <%= @member.name %></h5>
    <h5>CPF: <%= @member.CPF %></h5>
    <h5>Data de nascimento: <%= @member.birth %></h5>
  </div>
</div>

<div class="text-center">
  <div class="p-4">
    <%= link_to "Criar Tripulação para o Tripulante", new_member_crew_path(@member), class: "btn btn-primary  btn-lg" %>
  </div>
  <div class="p-4">
    <%=link_to "Lista de Tripulações do Tripulante", member_crews_path(@member), class: "btn btn-primary btn-lg"%>
  </div>
  <div>
    <%=link_to "Editar", edit_member_path(@member), class: "btn btn-primary btn-lg"%>
    <%#= link_to "Deletar", member_path(@member), method: :delete, data: { confirm: "Está certo disso?" }, class: "btn btn-success m-4" %>
    <%=link_to "Voltar", members_path, class: "btn btn-danger btn-lg"%>
  </div>
</div>

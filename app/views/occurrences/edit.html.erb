<h2 class="text-center"><i class="fas fa-map-marker-alt text-secondary"></i> Editar ocorrência n° <%=@occurrence.id%></h2>
<p id="position" class="text-center"></p>

<div id="map-new-point" class="map-edit-point mb-3"
     style="width: 100%; height: 300px;"> </div>

<%= simple_form_for [@occurrence] do |f| %>
  <div id="new-form">
    <%= f.input :date, label: 'Data', :order => [:day, :month, :year] %>
    <%=f.input :time, label: 'Hora', as: :string, input_html: { value: Time.now.strftime("%H:%M:%S") }%>
    <%=f.association :ship, label: 'Embarcação'%>
    <%=f.input :ship_origin, label: 'Origem', placeholder: 'Origem'%>
    <%=f.input :ship_destination, label: 'Destino', placeholder: 'Destino'%>
    <%=f.input :latitude, label: 'Latitude'%>
    <%=f.input :longitude, label: 'Longitude' %>
    <%=f.input :description, label: 'Descrição', as: :text %>

  </div>
  <%= f.button :submit, "Editar", class:"btn btn-warning mb-2 mr-2" %>
  <%= link_to "Voltar", :back, class:"btn btn-secondary mb-2" %>
<% end %>

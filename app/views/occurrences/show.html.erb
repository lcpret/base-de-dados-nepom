<h2 class="text-center"><i class="fas fa-paste text-secondary"></i> Ocorrência n° <%= @occurrence.id %></h2>
<div class="container-form text-center d-flex justify-content-center p-4">

<div class="card">
    <div class="d-flex justify-content-between">
      <% if @occurrence.ship.photo.attached? %>
        <%= cl_image_tag @occurrence.ship.photo.key, height: 300, width: 400, crop: :fill, class:"pb-4 rounded" %>
      <%else%>
        <div class="card-img-top p-3">
          <i class="fas fa-file-upload upload cover"></i>
        </div>
      <%end%>
    </div>
  <div class="form-login text-left p-4 text-dark">
    <p><strong>Embarcação: </strong> <%=@occurrence.ship.name%> </p>
    <%if @occurrence.ship.registration.nil?%>
      <p><strong>Registro da Embarcação: </strong> <%=@occurrence.ship.registration%> </p>
    <%end%>
    <p><strong>Data: </strong><%=@occurrence.date%></p>
    <p><strong>Hora: </strong><%=@occurrence.time%></p>
    <p><strong>Latitude: </strong><%=@occurrence.latitude%>°</p>
    <p><strong>Longitude: </strong><%=@occurrence.longitude%>°</p>
    <%if @occurrence.ship_origin.size > 0 %>
      <p><strong>Origem: </strong><%=@occurrence.ship_origin%></p>
    <% end %>
    <%if @occurrence.ship_destination.size > 0 %>
      <p><strong>Destino: </strong><%=@occurrence.ship_destination%></p>
    <% end %>
    <%if @occurrence.description.size > 0 %>
      <p><strong>Descrição: </strong><%=@occurrence.description%></p>
    <%end%>
  </div>
  </div>
</div>

<div id="map"
     style="width: 40%; height: 300px; display: block; margin-left: auto;margin-right: auto;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" class="mt-1 mb-4 text-center"></div>

<div class="text-center">
  <%=link_to "Editar", edit_occurrence_path, class: "btn btn-danger mr-2"%>
  <%=link_to "Voltar", occurrences_path, class: "btn btn-info"%>
</div>

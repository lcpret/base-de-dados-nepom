<h1 class="text-center">Tripulação <%= @crew.id %> </h1>
<p>
  <% if @crew.member_id %>
    Tripulante: <%= Member.find(@crew.member_id).name %>
  <% end %>
</p>
<p>
  <% if @crew.ship_id %>
    Embarcação: <%= Ship.find(@crew.ship_id).name %>
  <% end %>
</p>
<p>
  <% if @crew.date_ini %>
    Função: <%= @crew.date_ini %>
  <% end %>
</p>
<p>
  <% if @crew.date_fin %>
    Função: <%= @crew.date_fin %>
  <% end %>
</p>
<p>
  <% if @crew.role %>
    Função: <%= @crew.role %>
  <% end %>
</p>

<%=link_to "Editar", edit_crew_path(@crew), class: "btn btn-success m-4" %>
<%#= link_to "Deletar", member_crew_path(@crew), method: :delete, data: { confirm: "Está certo disso?" }, class: "btn btn-success m-4" %>

<% if params[:member_id] != nil %>
  <%= link_to "Lista de Tripulações do Tripulante", member_crews_path, class: "btn btn-success m-4" %>
<% end  %>
<% if params[:ship_id] != nil %>
  <%= link_to "Lista de Tripulações da Embarcação", ship_crews_path, class: "btn btn-success m-4" %>
<% end  %>

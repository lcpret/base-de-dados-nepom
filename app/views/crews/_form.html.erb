
<%= simple_form_for [@member, @ship, @crew] do |f| %>

  <% if @member != nil %>
    <%# <div class="form-group justify-content-center"> %>
      <%= f.label :'Tripulante: ' %>
      <br>
      <% @crew.member = @member %>
      <%= Member.find(@crew.member_id).name %>
      <br>
    <%# </div> %>
  <% else %>
    <%# <div class="form-group justify-content-center"> %>
      <%= f.label :'Tripulante: ' %>
      <br>
      <%= f.collection_select :member_id,
        Member.order(:name),
        :id,
        :name,
        include_blank: false,
        selected: params[:selected_member_id]
      %>
  <% end %>

  <br>

  <% if @ship != nil %>

    <%# <div class="form-group justify-content-center"> %>
      <%= f.label :'Embarcação: ' %>
      <br>
      <% @crew.ship_id = @ship.id %>
      <%= Ship.find(@crew.ship_id).name %>
      <br>
  <% else %>
     <%# <div class="form-group justify-content-center"> %>
      <%= f.label :'Embarcação: ' %>
      <br>
      <%= f.collection_select :ship_id,
        Ship.order(:name),
        :id,
        :name,
        include_blank: false
      %>

  <% end %>

  <%= f.input :date_ini, as: :date, label: "Data Inicial" %>
  <%= f.input :date_fin, as: :date, label: "Data Final" %>
  <%= f.input :role, label: "Função" %>
  <%= f.button :submit, "Salvar", class: "btn btn-primary btn-lg mr-2 text-center" %>
  <%= link_to 'Criar Tripulante', new_member_path(ship_id: @ship.id), class: "btn btn-primary btn-lg text-center" %>
<% end %>

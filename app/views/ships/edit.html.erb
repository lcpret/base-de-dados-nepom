<div class="container-form d-flex justify-content-center text-center">
  <div class="form-new-product text-center w-40 h-100 p-3">
    <%= simple_form_for(@ship) do |f| %>

    <div class="form-group justify-content-center">
      <%= f.label "Nome" %>
      <br>
      <%= f.text_field :name %>
    </div>

    <div class="form-group justify-content-center">
      <%= f.label "Registro" %>
      <br>
      <%= f.text_field :registration %>
    </div>

    <div class="form-group justify-content-center">
      <%= f.label "Porto de registro" %>
      <br>
      <%= f.text_field :registration_port %>
    </div>


    <div class="form-group justify-content-center">
      <%= f.input :photo, as: :file, label: "Foto" %>
      <%= link_to 'Remover imagem', delete_image_attachment_ship_path(@ship),
                method: :delete,
                data: { confirm: 'Confirma a deleção da imagem?' } %>
    </div>

    <%= f.button :submit, "Editar", class: "btn btn-success text-center" %>
    <%=link_to "Voltar", ship_path(@ship), class: "btn btn-danger m-4"%>
   <% end %>

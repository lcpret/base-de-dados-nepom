<h2 class="text-center"><i class="fas fa-ship text-secondary"></i> Incluir embarcação</h2>

<%# <div class="container-form d-flex justify-content-center text-center">
  <div class="form-new-product text-center w-40 h-100 p-3"> %>
    <%= simple_form_for(@ship) do |f| %>
      <%= f.input :name, required: true, label: "Nome" %>
      <%= f.input :registration, label: "Registro" %>
      <%= f.input :registration_port, label: "Porto de registro" %>
      <%= f.input :ship_type, label: "Tipo de embarcação", prompt: "Selecione o tipo", collection: ["Escuna", "Jetski", "Lancha", "Miúdo", "Navio", "Pesqueiro", "Rebocador", "Veleiro", "Outros"], required: true  %>
      <%= f.input :application, label: "Uso", prompt: "Selecione o uso", collection: ["Lazer", "Mercante", "Pesca", "Serviço", "Outros"], required: true  %>
      <%= f.input :photo, as: :file, label: "Foto" %>
      <%= f.button :submit, "Incluir", class: "btn btn-primary text-center mr-2" %>
      <%=link_to 'Voltar', :back, class: "btn btn-info text-center" %>
   <% end %>

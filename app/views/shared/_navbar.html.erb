      <% else %>
        <li class="nav-item text-center">
          <%= link_to "Entrar", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<style>
  .avatar:hover {
    border: solid 1px orange;
  }

  .avatar:active {
    border: solid 1px red;
